<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Price</th>
      <th></th>
      <th> Add Items to the Cart </th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.code %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= link_to "Edit", edit_item_path(item) %></td>
        <td><%= button_to "+", item_add_to_cart_path(item), :method => :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
